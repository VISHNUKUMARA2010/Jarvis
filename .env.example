# Example .env file for Jarvis
# Copy this file to .env and fill in your actual values

# Get your Cohere API key at: https://dashboard.cohere.com/api-keys
CohereAPIKEY=your_cohere_api_key_here

Username=your_username_here
Assistantname=your_assistant_name_here

# Get your Groq API key at: https://console.groq.com/keys
GroqAPIKey=your_groq_api_key_here

InputLanguage=en
AssistantVoice=en-CA-LiamNeural

# Get your Hugging Face API key at: https://huggingface.co/settings/tokens
HuggingFaceAPIKey=your_huggingface_api_key_here

# Database settings
DB_PATH=Data/your_database_file.db

# Application settings
LOG_LEVEL=INFO
DEFAULT_LANGUAGE=en

# Voice settings
VOICE_ENGINE=default
VOICE_LANGUAGE=en-US

# Other environment variables as needed
# CUSTOM_SETTING=your_value_here
